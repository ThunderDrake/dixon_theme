@import '../../../assets/css/includes/_mixins'

#main
	.content-holder
		.requisites-block
			margin 20px 0px
			.requisites-label
				color blue
				font-size 18px
				font-weight bold
				margin 0px 0px 10px 0px
			.requisites-content
				font-size 16px
				font-weight 400
				line-height 20px
				*
					font-size 16px
					line-height 20px
					margin 0px
			.requisites-download
				display inline-block
				padding 10px 30px
				margin 25px 0px 0px 0px
				color white
				font-size 18px
				font-weight bold
				background-color orange
				border-radius 5px
				transition background .2s linear
				&:hover
					background-color blue

@media screen and (min-width 992px) and (max-width 1199px)
	#main
		.content-holder
			.requisites-block
				margin 16px 0px
				.requisites-label
					font-size 14px
					margin 0px 0px 8px 0px
				.requisites-content
					font-size 13px
					line-height 16px
					*
						font-size 13px
						line-height 16px
						margin 0px
				.requisites-download
					padding 8px 24px
					margin 20px 0px 0px 0px
					font-size 13px
					border-radius 4px