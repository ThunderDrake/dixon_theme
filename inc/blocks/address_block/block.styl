@import '../../../assets/css/includes/_mixins'

.address-block
	df()
	fdc()
	margin 0px 0px 35px 0px
	.top-line
		df()
		fdr()
		ai('t')
		jc('b')
		.map-side
			df()
			fdc()
			width 100%
			border-radius 5px
			overflow hidden
			.map-holder
				height 260px
				position relative
				background-size cover
				background-image url('map-holder.png')
				background-position center center
				.map-object
					width 100%
					height 100%
		.photo-side
			width calc(50% - 10px)
			border-radius 5px
			overflow hidden
			img
				min-width 100%
				min-height 100%
				object-fit cover
		&.dual
			.map-side
				width calc(50% - 10px)
	.bottom-line
		margin 15px 20px
		.line
			position relative
			df()
			fdr()
			ai('c')
			.icon
				width 20px
				margin-right 15px
				dif()
				fdc()
				fs(0)
				jc('c')
				ai('c')
				&:before
					content ''
					display block
					background-size contain
					background-repeat no-repeat
					background-position center
			.text
				color black
				font-size 16px
				line-height 20px
				a
					color orange
			&.address
				.icon
					&:before
						width 17px
						height 25px
						background-image url('address.png')
			&.clocks
				.icon
					&:before
						width 20px
						height 20px
						background-image url('clocks.png')
			&.phones
				.icon
					&:before
						width 19px
						height 19px
						background-image url('phones.png')
			& + .line
				margin-top 5px

@media screen and (min-width 992px) and (max-width 1199px)
	.address-block
		margin 0px 0px 28px 0px
		.top-line
			.map-side
				border-radius 4px
				.map-holder
					height 208px
			.photo-side
				width calc(50% - 8px)
				border-radius 4px
			&.dual
				.map-side
					width calc(50% - 8px)
		.bottom-line
			margin 12px 16px
			.line
				.icon
					width 16px
					margin-right 12px
				.text
					font-size 13px
					line-height 16px
				&.address
					.icon
						&:before
							width 14px
							height 20px
				&.clocks
					.icon
						&:before
							width 16px
							height 16px
				&.phones
					.icon
						&:before
							width 15px
							height 15px
				& + .line
					margin-top 4px

@media screen and (max-width 480px)
	.address-block
		.top-line
			fw(1)
			.photo-side
				width 100%
			&.dual
				.map-side
					width 100%
					margin-bottom 10px
		.bottom-line
			margin 12px 0px