@import '../../../../assets/css/includes/_mixins'

.posts-spoiler-block
	padding 75px 0px 25px 0px
	.spoiler
		border-top 1px solid black
		.spoiler-label
			font-size 20px
			font-weight bold
			padding 10px 10px 10px 45px
			position relative
			.toggler
				position absolute
				width 17px
				height 17px
				top 0px
				left 0px
				bottom 0px
				margin auto 0px
				&:before
				&:after
					content ''
					position absolute
					top 6px
					left 0px
					width 17px
					height 5px
					display block
					background-color black
					transform rotate(0deg)
					transition transform .2s linear
			&.open
				.toggler
					&:before
						transform rotate(90deg)
					&:after
						transform rotate(180deg)
		.spoiler-content
			display none
			padding 10px
			& > *:first-child
				margin-top 0px
			h2
			h3
				font-size 20px
				font-weight bold
				margin 25px 0px 15px 0px
			p
			li
				font-size 16px
				line-height 20px
			ul
				margin 10px 0px 20px 0px
				li
					margin 0px 0px 10px 0px
					padding 0px 0px 0px 20px
					position relative
					&:before
						content ''
						position absolute
						top 8px
						left 0px
						width 5px
						height 5px
						background-color pink
	.read-all
		a
			position relative
			display block
			width 100%
			padding-top 100%
			background-color pink
			border-radius 50%
			cursor pointer
			color black
			&:hover
				background-color darken(pink,10%)
			.icon
				position absolute
				top 15px
				left 35px
				width 55px
				height 65px
				svg
					width 100%
			.text
				position absolute
				top 50%
				left 35px
				right 35px
				font-size 16px
				font-weight 900
				line-height 30px
				letter-spacing 4px
				text-transform uppercase
			
@media screen and (max-width 1199px)
	.posts-spoiler-block
		padding 60px 0px 20px 0px
		.spoiler
			.spoiler-label
				font-size 16px
				padding 8px 8px 8px 36px
				.toggler
					width 14px
					height 14px
					&:before
					&:after
						top 4px
						width 14px
						height 4px
			.spoiler-content
				padding 8px
				& > *:first-child
					margin-top 0px
				h2
				h3
					font-size 16px
					margin 20px 0px 12px 0px
				p
				li
					font-size 13px
					line-height 16px
				ul
					margin 8px 0px 16px 0px
					li
						margin 0px 0px 8px 0px
						padding 0px 0px 0px 16px
						&:before
							top 6px
							left 0px
							width 4px
							height 4px
		.read-all
			a
				.icon
					top 12px
					left 28px
					width 44px
					height 82px
				.text
					left 28px
					right 28px
					font-size 13px
					line-height 24px
					letter-spacing 3px

@media screen and (max-width 991px)
	.posts-spoiler-block
		.read-all
			a
				margin-top 30px
				padding 10px
				border-radius 0px
				width auto
				dif()
				fdr()
				ai('c')
				.icon
					dif()
					position static
					width 24px
					height 32px
					margin-right 15px
				.text
					dif()
					position static
					font-size 13px
					line-height 24px
					letter-spacing 3px