[data-emulation="select"]
	display inline-block
	vertical-align bottom
	width 100%
	// max-width 400px
	height 46px
	box-shadow inset 0px 0px 0px 2px rgba(dark,0.7)
	position relative
	font-size 20px
	text-align left
	&:after
		content ''
		position absolute
		z-index 1
		pointer-events none
		background-image url('images/select-arrow.png')
		background-repeat no-repeat
		background-position center center
		top 0px
		right 0px
		bottom 0px
		border-left 2px solid rgba(dark,0.7)
		width 49px
	span.opt-image
		display inline-block
		width 80px
		height 20px
		text-align center
		margin-right 10px
		vertical-align middle
		font-size 0px
		img
			max-width 100%
			max-height 100%
			&[src=""]
				display none
	[data-emulation="placeholder"]
		height inherit
		padding 12px 12px 12px 22px
		margin-right 50px
		font-weight 400
		color inherit
		font-size inherit
		font-family inherit
		user-select none
		cursor default
		overflow hidden
		white-space pre
	[data-emulation="dropdown"]
		display none
		position absolute
		box-sizing border-box
		background-color white
		padding 0px
		top 0px
		left 0px
		right 0px
		cursor default
		z-index 3
		margin-bottom 30px
		// transition .3s height
		overflow hidden
		border-bottom 2px solid dark
		[data-emulation="option"]
			background-color white
			padding 9px 10px 9px 20px
			white-space pre
			min-height 46px
			border 2px solid dark
			border-bottom 0px
			// white-space nowrap
			position relative
			z-index 7
			font-family inherit
			color black
			cursor default
			&:hover
				// color white
				background-color rgba(brown,0.3)
			&.hidden
				display none
			&.selected
				color white
				background-color brown
			&[removed]
				display none
			&[disabled]
				pointer-events none
				color dgrey
				&.selected
					background-color white
	&.active
		box-shadow 0px 2px 0px 0px dgrey
		[data-emulation="dropdown"]
			display block

select
	display inline-block
	vertical-align middle
	width 100%
	display block
	height 46px
	color #5a5a5a
	font-size 20px
	font-weight 400
	padding 10px 10px 10px 15px
	border 2px solid #5a5a5a
	position relative
	background-color white
	outline none
	box-sizing border-box
	&.removed
		width 0px !important
		min-height 0px !important
		height 0px !important
		opacity 0 !important
		overflow hidden !important
		pointer-events none !important
		border none !important
		margin 0px !important
		padding 0px !important