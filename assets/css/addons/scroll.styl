.scroll-content
	transform translate3d(0, 0, 0)
.scrollbar-track
	background-color rgba(0,0,0,0.1)
	position fixed
	// opacity 0
	z-index 10
	user-select none
	transition opacity btrans
// .scrollbar-track.show
// .scrollbar-track:hover
// 	opacity 1
.scrollbar-track-y
	display none
.scrollbar-track-y
	top 0
	right 0
	width 10px
	height 100%
.scrollbar-thumb
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background rgba(0,0,0,0.3)
	border-radius 4px