.modal-background
	position fixed
	top 0px
	left 0px
	right 0px
	bottom 0px
	z-index 10000
	background-color rgba(black,0.4)
	opacity 1
	transition .3s opacity
	&.hidden
		opacity 0

.modal-container
	position fixed
	top 0px
	left 0px
	right 0px
	bottom 0px
	z-index 10000
	pointer-events none
	opacity 1
	transition .3s opacity
	df()
	fdc()
	jc('c')
	ai('c')
	&.hidden
		opacity 0
		.modal-dialog
			transform scale(0,0)
			filter opacity(0)
			-webkit-filter opacity(0)
	.modal-dialog
		df()
		fdc()
		pointer-events initial
		min-width 400px
		max-width 90%
		max-height 90%
		background-color white
		transition .3s transform, .3s filter
		transform scale(1,1)
		filter opacity(1)
		-webkit-filter opacity(1)
		background-color white
		box-shadow 0px 0px 35px 0px rgba(0,0,0,0.4)
		border-radius 5px
		.modal-header
			df()
			fdr()
			fw()
			position relative
			.modal-header-close
				position absolute
				top 0px
				right 0px
				border none
				outline none
				cursor pointer
				width 40px
				height 40px
				padding 0px
				font-size 0px
				background-color rgba(0,0,0,0)
				background-image url('../images/modal-close.png')
				background-repeat no-repeat
				background-position center center
			.modal-header-title
				df()
				fg(1)
				jc('c')
				margin 40px 30px 40px 30px
				color black
				font-size 28px
				font-weight bold
				line-height 30px
				text-transform uppercase
		.modal-content
			df()
			fdr()
			fw()
			padding 0px 30px 0px 30px
			.form
				df()
				fdc()
				.input
					dif()
					fdc()
					width 100%
					margin-bottom bp
					input
						padding 12px 15px
						border-radius 5px
						border 1px solid lgrey
						background-color white
						&:-webkit-autofill
						&:-webkit-autofill:hover
						&:-webkit-autofill:focus
							box-shadow inset 0px 0px 0px 50px white
							-webkit-text-fill-color black
						&.error
							pha(color,red)
							border-color red
							& ~ .error-msg
								font-size 11.5px
								margin-top 5px
						&[required]
							& ~ label
								&:after
									content '*'
									color red
									margin-left .2em
					.error-msg
						order 3
						margin 0px
						color red
						font-size 0px
						transition .3s linear
				.button
					dif()
					fdc()
					fg(1)
					margin-left 15px
					button
						width 100%
						padding 15px
						border-radius 5px
						background-color dred
						color white
						font-size 13px
						letter-spacing .1em
						text-transform uppercase
				.spp-input
					width 100%
					input[type="checkbox"]
						order 1
						width 0px
						height 0px
						margin 0px
						padding 0px
						opacity 0
						&:active
						&:hover
						&:focus
							& ~ label
								&:after
									opacity 0.3
						&:checked
							& ~ label
								&:after
									opacity 1
						& ~ label
							order 2
							position relative
							margin 10px 0px 0px 0px
							width 100%
							padding 5px 0px 5px 20px
							color black
							font-size 14px
							a
								color inherit
								text-decoration underline
							&:before
								content ''
								position absolute
								z-index 1
								top 3px
								left 0px
								width 15px
								height 15px
								border 1px solid black
							&:after
								content ''
								position absolute
								top 5px
								left 2px
								width 5px
								height 9px
								border-width 0px 2px 2px 0px
								border-style solid
								border-color black
								transform rotate(45deg)
								opacity 0
								transition opacity .1s linear
						& ~ .error-msg
							margin-left 20px
		.modal-footer
			df()
			fdr()
			jc('c')
			button
				margin 15px 0px 30px 0px
				border 1px solid orange
				border-radius 5px
				padding 15px 30px
				color white
				background rgba(orange,1)
				font-size 13px
				font-weight 400
				letter-spacing 0.075em
				text-transform uppercase
				transition all .2s linear
				&:hover
					color orange
					background-color rgba(orange,0)


@media screen and (max-width 992px)
	.modal-container
		cursor pointer

@media screen and (max-width 560px)
	.modal-container
		.modal-dialog
			.modal-header
				.modal-header-title
					margin 10px 10px 20px 60px
					width calc(100% - 120px)
					font-size 24px
			.modal-content
				padding 0px 50px
				.form
					.block
						input
						textarea
							font-size 18px
			.modal-footer
				button
					margin-bottom 20px