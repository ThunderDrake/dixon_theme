&.base-page

	.sidebar-toggle
		dif()
		fdc()
		ai('c')
		jc('c')
		position fixed
		top calc(50% - 20px)
		left 0px
		bottom calc(50% - 20px)
		width 40px
		height 40px
		z-index 12
		margin 0px
		padding 5px
		transition left .3s linear
		border-radius 0px 10px 10px 0px
		background-color white
		box-shadow 0px 0px 5px 0px rgba(0,0,0,0.2)
		.line
			dif()
			width 24px
			height 4px
			background-color mblue
			margin 3px 8px
			transition .2s linear
			&:nth-of-type(1)
				transform rotate(0deg)
			&:nth-of-type(2)
				opacity 1
			&:nth-of-type(3)
				transform rotate(0deg)
		&:hover
		&:active
			.line
				background-color blue

	.sidebar-holder
		width 35%
		position fixed
		top 0px
		left 0px
		bottom 0px
		z-index 100
		transform translateX(-100%)
		transition transform .3s linear
		padding 0px
		background-color white
		box-shadow 0px 0px 20px 0px rgba(0,0,0,0.15)
		overflow-y auto
		&.open
			transform translateX(0%)
			& + .sidebar-toggle
				left 35%
				.line
					&:nth-of-type(1)
						transform rotate(45deg)
						margin-bottom -7px
					&:nth-of-type(2)
						opacity 0
					&:nth-of-type(3)
						transform rotate(-45deg)
						margin-top -7px
		.nav-menu
			border-radius 0px
			box-shadow unset
			.nav-menu-splitter
				height 1px
			.nav-menu-element
				padding 0px
				&:first-of-type
					border-radius 0px
				&:last-of-type
					border-radius 0px
				&.has-childs
					& > a
						width calc(100% - 60px)
					& > .toggler
						transform rotate(0deg)
					&:hover
						& > .sub-menu
							display none
						& > .toggler
							transform rotate(0deg)
				.sub-menu
					width 100%
					position static
					left 0px
					border-radius 0px
					box-shadow inset 0px 5px 10px -10px rgba(blue,0.3), inset 0px -5px 10px -10px rgba(blue,0.3)
					z-index 1
				&.open
					& > .toggler
						transform rotate(-90deg)
					& > .sub-menu
						display block
					&:hover
						& > .sub-menu
							display block
						& > .toggler
							transform rotate(-90deg)