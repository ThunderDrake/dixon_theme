&.product-page
	
	.content-holder-white-bg
		border-radius 4px
		box-shadow 0px 0px 20px 0px rgba(0,0,0,0.15)
		margin 20px 0px

	.product-info
		margin-bottom 28px
		
		.product-info-gallery
			margin-bottom 30px
	
		.product-gallery-wrapper
			.swiper-button-next
			.swiper-button-prev
				width 24px
				height 24px
				top calc(50% - 12px)
			.product-gallery-images
				margin 0px 0px 16px 0px
				.product-images
					margin 0px
					border-radius 5px
			.product-gallery-thumbnails
				padding 0px 31px
				.product-thumbnails
					.product-gallery-thumbnail
						border-radius 4px

		.product-info-cart-controls
			.product-price
				font-size 22px
				line-height 24px
				del
					font-size 16px
					margin-left 8px
			.cart
				margin-top 20px
				.quantity
					margin-bottom 12px
					.qty
						padding 8px 16px
						font-size 18px
						line-height 18px
						width calc(100% - 72px)
					.qty-minus
					.qty-plus
						width 36px
						&:before
						&:after
							width 12px
							height 2px
					.qty-minus
						border-top-left-radius 4px
						border-bottom-left-radius 4px
					.qty-plus
						border-top-right-radius 4px
						border-bottom-right-radius 4px
				.button
					padding 12px 40px
					font-size 14px
					border-radius 4px
					width 100%
	
	.product-info-tabs
		margin-bottom 12px
		.tab
			padding-left bp
			padding-right bp
			padding-bottom 12px
			width 100%
			& + .additional_information
				border-top 1px solid mblue
				border-left 0px
		.tab-title
			font-size 14px
			line-height 16px
			margin 0px 0px 16px 0px
			min-height 16px
		.classic-editor-block
			p
			li
			ul
			ol
				line-height 16px
			p
				margin 0px 0px 8px 0px
		.product-attributes
			td
				padding 0px
				font-size 13px
				line-height 16px
			.value
				padding-left 8px

	.related-products
		.related-title
			font-size 14px
			line-height 16px
			margin 0px 0px 16px 0px