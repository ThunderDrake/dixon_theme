&.product-page

	.content-holder-white-bg
		df()
		fdc()
		padding 0px
		border-radius 5px
		background-color white
		box-shadow 0px 0px 25px 0px rgba(0,0,0,0.15)
		margin 25px 0px

	.product-info
		df()
		fdr()
		fw(1)
		ai('s')
		margin-bottom 35px
		.product-info-gallery
		.product-info-cart-controls
			dif()
	
		.product-gallery-wrapper
			df()
			fdc()
			width 100%
			.swiper-wrapper
				df()
				fdr()
				fw(0)
				width 100%
				.swiper-slide
					dif()
					jc('c')
					ai('c')
					fs(0)
			.swiper-button-next
			.swiper-button-prev
				border none
				position absolute
				border-radius 50%
				width 30px
				height 30px
				padding 0px
				margin 0px
				z-index 10
				top calc(50% - 15px)
				background-color rgba(0,0,0,0)
				background-size contain
				background-image url('../images/quick-links-arrow.png')
				background-repeat no-repeat
				background-position center
				display none
				&:after
					display none
				&[tabindex]
					display block
			.swiper-button-next
				transform scale(-1,1)
				right 0px
			.swiper-button-prev
				left 0px
			.product-gallery-images
				padding 0px
				position relative
				margin 0px 0px 20px 0px
				.product-images
					df()
					fdr()
					width 100%
					margin 0px
					overflow hidden
					border-radius 5px
					.product-gallery-image
						dif()
						jc('c')
						ai('c')
			.product-gallery-thumbnails
				padding 0px 39px
				position relative
				.product-thumbnails
					df()
					fdr()
					width 100%
					overflow hidden
					margin 0px
					.product-gallery-thumbnail
						dif()
						jc('c')
						ai('c')
						border-radius 5px
						overflow hidden
						border 1px solid mblue
					.swiper-slide-thumb-active
						border-color orange

		.product-info-cart-controls
			.product-price
				df()
				fdr()
				fw(1)
				ai('e')
				color black
				font-size 27px
				font-weight bold
				line-height 30px
				del
					order 2
					color black
					font-size 20px
					margin-left 10px
				ins
					order 1
					color orange
					text-decoration none
			.out-of-stock
				margin-top 20px
				font-size 16px
			.cart
				margin-top 25px
				.quantity
					df()
					fdr()
					ai('t')
					margin-bottom 30px
					label
						display none
					.qty
						border 1px solid mblue
						padding 10px 20px
						color black
						font-size 22px
						font-weight bold
						line-height 22px
						text-align center
						width 85px
					.qty-minus
					.qty-plus
						border 1px solid mblue
						width 45px
						position relative
						background-color white
						transition background .2s linear
						&:before
						&:after
							content ''
							position absolute
							top 0px
							left 0px
							right 0px
							bottom 0px
							margin auto
							display block
							background-color black
							width 14px
							height 2px
							transform rotate(0deg)
							transition background .2s linear
						&:hover
							background-color lblue
							&:before
							&:after
								background-color blue
						&[disabled]
							cursor default
							opacity 0.5
							background-color white
							&:before
							&:after
								background-color black
					.qty-minus
						border-right 0px
						border-top-left-radius 5px
						border-bottom-left-radius 5px
					.qty-plus
						border-left 0px
						border-top-right-radius 5px
						border-bottom-right-radius 5px
						&:after
							transform rotate(90deg)
				.button
					padding 15px 50px
					margin 0px
					color white
					font-size 18px
					font-weight bold
					background-color orange
					border-radius 5px
					transition background .2s linear
					&:hover
						background-color blue
	
	.product-info-tabs
		df()
		fdr()
		fw(1)
		margin-bottom 15px
		.video-popup
			dif()
			jc('c')
			ai('c')
			padding 15px 50px
			margin 0px 0px 15px 0px
			color white
			font-size 18px
			font-weight bold
			background-color orange
			border-radius 5px
			transition background .2s linear
			&:hover
				background-color blue
		.tab
			dif()
			fdc()
			fg(1)
			width 50%
			padding-left bp
			padding-right bp
			padding-bottom 15px
			& + .additional_information
				border-left 1px solid mblue
		.tab-title
			color blue
			font-size 18px
			font-weight bold
			line-height 20px
			margin 0px 0px 20px 0px
			min-height 20px
		.classic-editor-block
			p
			li
			ul
			ol
				line-height 20px
			p
				margin 0px 0px 10px 0px
		.product-attributes
			td
				padding 0px
				font-size 16px
				line-height 20px
				p
					margin 0px
			.value
				padding-left 10px
				text-align center

	.related-products
		.related-title
			color blue
			font-size 18px
			font-weight bold
			line-height 20px
			margin 0px 0px 20px 0px

