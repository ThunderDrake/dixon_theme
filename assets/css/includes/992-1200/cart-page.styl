&.cart-page
	.woocommerce-cart-form
		.cart-table
			thead
				tr
					th
						padding 16px 8px
			tbody
				tr
					td
						padding 8px
					.product-thumbnail
						img
							max-width 80px
							max-height 80px
					.product-quantity
						.quantity
							.qty
								padding 8px 16px
								font-size 13px
								line-height 13px
								border-radius 4px
								width 68px
					.product-remove
						a
							border-radius 4px
							width 32px
							height 32px
							font-size 13px
				.total-line
					.total
						font-size 13px
				.last-line
					td
						.flexed
							padding 16px 0px
							.catalog-button
								padding 12px 40px
								font-size 14px
								border-radius 4px
							.checkout-button
								padding 12px 40px
								font-size 14px
								border-radius 4px