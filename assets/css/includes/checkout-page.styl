&.checkout-page
	padding-bottom 40px
	.woocommerce
		width 100%
	.woocommerce-error
	.woocommerce-NoticeGroup-checkout
		display none
	
	.woocommerce-form-coupon-toggle
		display none

	.woocommerce-checkout
		.row
			ai('s')

	.checkout-block
		margin 20px 0px
		padding 0px
		border 1px solid mblue
		background-color white
		.checkout-block-header
			padding 10px 20px
			background-color mblue
			font-size 16px
			font-weight bold
		.checkout-block-content
			padding 20px

	.required-error
		display none
		color red
		margin 10px 0px 0px 0px
		font-size 14px
	.fields-group-label
		color black
		font-size 20px
		font-weight bold
		margin 0px 0px 15px 0px
	.form-row
		display block
		margin 0px 0px 0px 0px
		& + .form-row
			margin-top 20px
		label
			display inline-block
			font-size 14px
			font-weight 600
			margin-bottom 10px
		abbr[title]
			border none
			text-decoration none
		.woocommerce-input-wrapper
			display block
			select
				width 100%
				height 34px
			input:not([type="radio"]):not([type="checkbox"])
			textarea
				width 100%
				padding 6px
				height 34px
				font-size 14px
				border 1px solid mblue
				border-radius 3px
				&:focus
				&:active
					border-color orange
			textarea
				height 102px
				resize none
		&.woocommerce-invalid
			label
				color red
			.woocommerce-input-wrapper
				input
				textarea
					border-color red

	.woocommerce-checkout-payment
		.woocommerce-terms-and-conditions-wrapper
			.woocommerce-privacy-policy-text
				p
					font-size 14px
		.button
			dif()
			padding 15px 30px
			margin 0px
			color white
			font-size 18px
			font-weight bold
			background-color orange
			border-radius 5px
			transition background .2s linear
			&:hover
				background-color blue

	.order-side
		padding-left 15px
		margin-top 20px
		.order-side-title
			padding 10px 20px
			background-color mblue
			font-size 16px
			font-weight bold
		.woocommerce-checkout-review-order
			padding 0px
			.woocommerce-checkout-review-order-table
				.products
					.products-product
						border 1px solid mblue
						background-color white
						box-shadow 0px 5px 20px 0px rgba(0,0,0,0.05)
						margin-top 10px
						df()
						fdr()
						ai('t')
						.product-image
							dif()
							ai('c')
							jc('c')
							fs(0)
							width 100px
							border-right 1px solid mblue
							img
								max-width 100%
								max-height 100%
						.product-info
							dif()
							fdc()
							width 100%
							.product-name
								df()
								fg(1)
								font-size 14px
								padding 10px 20px
							.product-total
								border-top 1px solid mblue
								df()
								fdr()
								.product-price
								.product-quantity
								.product-subtotal
									dif()
									fg()
									jc('c')
									flex-basis 40%
									font-size 12px
									padding 10px
								.product-quantity
									flex-basis 25%
									border-width 0px 1px 0px 1px
									border-style solid
									border-color mblue
								.product-subtotal
									font-weight bold
				.totals
					margin-top 20px
					background-color rgba(mblue,0.5)
					box-shadow 0px 5px 20px 0px rgba(0,0,0,0.05)
					.totals-row
						df()
						fdr()
						.label
						.value
							dif()
							fg(1)
							flex-basis 30%
							padding 10px 20px
						.label
							jc('s')
							font-size 14px
						.value
							jc('e')
							font-weight bold
					.totals-alert
						padding 10px 20px
						color white
						font-size 16px
						text-align center
						background-color pink

	.woocommerce-order
		.checkout-block
			.sub-title
				color blue
				font-size 20px
				font-weight bold
			address
				font-style normal
				p
					margin 0px 0px 10px 0px
			table
				font-size 16px
				width calc(100% + 20px)
				margin -10px
				border-collapse collapse
				thead
					tr
						th
						td
							padding 10px
							text-align left
				tbody
					tr
						border-bottom 1px solid lgrey
						background-color rgba(lgrey,0.1)
						td
							padding 10px
							text-align left
				tfoot
					tr
						th
						td
							padding 10px
							text-align left
		.order-info
			width auto
			tbody
				tr
					td
						&:nth-of-type(1)
							font-weight bold

